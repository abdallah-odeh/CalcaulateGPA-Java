<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    package="com.example.calculategpa_petrauni">

    <application
        android:allowBackup="true"
        android:icon="@drawable/uni"
        android:label="@string/app_name"
        android:roundIcon="@drawable/uni"
        android:supportsRtl="true"
        android:theme="@style/AppTheme"
        tools:ignore="GoogleAppIndexingWarning">
        <activity android:name=".ui.Settings"></activity>
        <activity android:name=".ui.ContactMe" />
        <activity
            android:name=".ui.Result"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.MarksInfo"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.Calculate"
            android:screenOrientation="portrait" />
        <activity
            android:name=".ui.Splash"
            android:screenOrientation="portrait">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
    </application>

</manifest>